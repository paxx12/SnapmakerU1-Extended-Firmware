#!/bin/sh

NAME="night-mode-scheduler"
DAEMON="/usr/local/bin/night_mode_scheduler.py"
PIDFILE="/var/run/${NAME}.pid"
USER="lava"

start() {
    printf "Starting %s: " "$NAME"
    if [ -f "$PIDFILE" ] && kill -0 "$(cat "$PIDFILE")" 2>/dev/null; then
        echo "already running"
        return 0
    fi
    start-stop-daemon -S -b -m -p "$PIDFILE" -c "$USER" -x /usr/bin/python3 -- "$DAEMON"
    echo "OK"
}

stop() {
    printf "Stopping %s: " "$NAME"
    if [ -f "$PIDFILE" ]; then
        start-stop-daemon -K -p "$PIDFILE" -s TERM
        rm -f "$PIDFILE"
        echo "OK"
    else
        echo "not running"
    fi
}

restart() {
    stop
    sleep 1
    start
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart|reload)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
 esac

exit 0
