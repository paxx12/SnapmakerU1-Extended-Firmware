#!/bin/sh

EXTENDED_CFG="/home/lava/printer_data/config/extended/extended.cfg"
EXPORTER_ENABLED=$(/usr/local/bin/extended-config.py "$EXTENDED_CFG" monitoring klipper_exporter_enabled false)
EXPORTER_ADDRESS=$(/usr/local/bin/extended-config.py "$EXTENDED_CFG" monitoring klipper_exporter_address ":9101")

NAME="prometheus-klipper-exporter"
DAEMON="/usr/local/bin/prometheus-klipper-exporter"
PIDFILE="/var/run/$NAME.pid"

start() {
    if [ "$EXPORTER_ENABLED" != "true" ]; then
        echo "prometheus-klipper-exporter is disabled in extended.cfg, not starting."
        return
    fi

    echo "Starting $NAME: "
    if [ -f "$PIDFILE" ] && kill -0 $(cat "$PIDFILE") 2>/dev/null; then
        echo "already running"
        return 1
    fi
	start-stop-daemon -S -m -q -b -c lava -p "$PIDFILE" -x $DAEMON -- -web.listen-address "$EXPORTER_ADDRESS"
    echo "OK"
}

stop() {
    echo "Stopping $NAME: "
    if [ -f "$PIDFILE" ]; then
        start-stop-daemon -K -p "$PIDFILE" -s TERM
        rm -f "$PIDFILE"
        echo "OK"
    else
        echo "not running"
    fi
}

restart() {
    stop
    sleep 1
    start
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart|reload)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit $?
